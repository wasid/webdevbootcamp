<!DOCTYPE html>
<html>
    <head>
        <title>YelpCamp</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/landing.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js" type="text/javascript" async></script>
    </head>
    <body>
    
    <div class="container">
        <% if(success && success.length > 0 ) { %>
            <div class="alert alert-dismissible alert-success fade in text-center">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong>Success!</strong> 
              <%= success %>
            </div>
          <% } %>
          <% if(error && error.length > 0 ) { %>
            <div class="alert alert-dismissible alert-danger fade in text-center">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong>Warning!</strong> 
              <%= error %>
            </div>
          <% } %>
          <% if(info && info.length > 0 ) { %>
            <div class="alert alert-dismissible alert-info fade in text-center">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong>Information!</strong> 
              <%= info %>
            </div>
          <% } %>
          <% if(warning && warning.length > 0 ) { %>
            <div class="alert alert-dismissible alert-warning fade in text-center">
              <button type="button" class="close" data-dismiss="alert">&times;</button>
              <strong>Information!</strong> 
              <%= warning %>
            </div>
        <% } %>
    </div>
    
    <div id="landing-header">
 		<h1>Welcome to YelpCamp!</h1>
		<a href="/campgrounds" class="btn btn-lg btn-success">View All Campgrounds</a>
    </div>
    
    <ul class="slideshow">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>

<% include partials/footer %>