<% include partials/header %>

<div class="ui main text container">
    <div class="ui huge header">
        <%= bloginfo.title %>
        <div class="ui top attached segment">
            <!--<div class="ui items">-->
              <div class="item">
                <div class="image">
                  <img class="ui centered rounded image" src="<%= bloginfo.image %>">
                </div>
                <div class="content">
                  <!--<a class="header">Header</a>-->
                  <div class="meta">
                    <span><%= bloginfo.created.toDateString() %></span>
                  </div>
                  <div class="extra">
                    <a class="ui teal button" href="/blogs/<%= bloginfo._id %>/edit">Edit</a>
                  </div>
                  <div class="description">
                    <p><%= bloginfo.body %></p>
                  </div>
                  <div class="extra">
                    <form class="ui form" action="/blogs/<%= bloginfo._id %>/delete" method="post">
                      <button class="ui red button" type="submit">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            <!--</div>-->
        </div>
    <a class="ui inverted olive button" href="/blogs">Back to Blog Page!</a>
</div>

<% include partials/footer %>
